<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingTop="10dp"
    android:paddingEnd="5dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imageViewFilm"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/scaleRatingBarFilm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFilm"
        app:layout_constraintStart_toStartOf="@+id/imageViewFilm"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFilm"
        app:srb_clearRatingEnabled="true"
        app:srb_clickable="false"
        app:srb_drawableEmpty="@drawable/empty_star_1"
        app:srb_drawableFilled="@drawable/yellow_star"
        app:srb_isIndicator="false"
        app:srb_minimumStars="1"
        app:srb_numStars="5"
        app:srb_rating="2"
        app:srb_scrollable="false"
        app:srb_starHeight="30dp"
        app:srb_starPadding="0dp"
        app:srb_starWidth="30dp"
        app:srb_stepSize="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>